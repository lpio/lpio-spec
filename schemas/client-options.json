{
  "id": "/client-options",
  "title": "Client options schema.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "required": true,
      "description": "A unique client identifier."
    },
    "user": {
      "type": "string",
      "required": true,
      "description": "A unique user identifier."
    },
    "url": {
      "type": "string",
      "required": false,
      "default": "/lpio",
      "description": "URL or path, the server will accept request from."
    },
    "ackTimeout": {
      "type": "number",
      "required": false,
      "default": 10000,
      "description": "Time in ms to wait until a message delivery to the server did fail."
    },
    "pingInterval": {
      "type": "number",
      "required": false,
      "default": 25000,
      "description": "Interval in ms a ping message will be scheduled to maintain connected/disconnected state."
    },
    "multiplex": {"$ref": "/multiplexer-options"},
    "backoff": {"$ref": "/client-backoff-options"}
  }
}