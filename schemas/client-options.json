{
  "id": "/client-options",
  "title": "Client options schema.",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "required": true,
      "description": "A definite unique client identifier."
    },
    "url": {
      "type": "string",
      "required": false,
      "default": "/lpio",
      "description": "URL or path, the server will accept request from."
    },
    "disconnectedAfter": {
      "type": "number",
      "required": false,
      "dafault": 5,
      "description": "A number of attempts until 'discconnected' event will be emitted."
    },
    "multiplex": {"$ref": "/multiplexer-options"},
    "backoff": {"$ref": "/client-backoff-options"}
  }
}